<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/activity_registration_form"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="comn.example.user.j_trok.RegistrationForm">

    <EditText
        android:drawableLeft="@drawable/ic_perm_identity_18pt_2x"
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint=" Username"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:drawableLeft="@drawable/ic_lock_open_black_18dp"
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint=" Enter Password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/confirmPassword"
        android:drawableLeft="@drawable/ic_lock_open_black_18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint=" Confirm Password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:id="@+id/passwordHint"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:textColor="#ff1c5a"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:drawableLeft="@drawable/ic_mail_outline_black_18dp"
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint=" Email address"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/spinner"
        android:spinnerMode="dropdown"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/city"
        android:drawableLeft="@drawable/ic_place_white_18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint=" City"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/cancel"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Cancel"
            android:layout_marginLeft="20dp" />

        <Button
            android:id="@+id/sign_up"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:text="Sign up"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:onClick="signup"/>
    </LinearLayout>

</LinearLayout>
