<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_screen2</item>
        <item name="colorPrimaryDark">@color/bg_screen1</item>
        <item name="colorAccent">@color/bg_screen1</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ChatTextContentStyle" parent="MaterialStyledDialogs_Description">
        <item name="android:alpha">0.9</item>
    </style>
    <style name="appNameTextStyle" parent="MaterialStyledDialogs_TitleHeader">
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">@dimen/margin_50</item>
        <item name="android:textColor">@color/bg_screen1</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
